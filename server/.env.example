# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lingualive

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=chrome-extension://your-extension-id,http://localhost:3000,http://localhost:5173

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_KEY=your-admin-key-for-protected-endpoints

# Zoom API Configuration (Get these from Zoom Marketplace)
# Visit: https://marketplace.zoom.us/develop/create
ZOOM_API_KEY=your_zoom_api_key_here
ZOOM_API_SECRET=your_zoom_api_secret_here

# Zoom SDK Configuration (Get these from Zoom SDK)
# Visit: https://developers.zoom.us/docs/meeting-sdk/developer-accounts/
ZOOM_SDK_KEY=your_zoom_sdk_key_here
ZOOM_SDK_SECRET=your_zoom_sdk_secret_here

# AI Service Configuration (optional fallback services)
OPENAI_API_KEY=your-openai-api-key-if-using-fallback
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key-if-using-fallback

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Logging
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# WebSocket Configuration
SOCKET_IO_CORS_ORIGINS=chrome-extension://your-extension-id,http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Cleanup Configuration
MESSAGE_CLEANUP_DAYS=30
ROOM_CLEANUP_DAYS=7

# Performance Configuration
DB_POOL_SIZE=10
SOCKET_IO_PING_TIMEOUT=5000
SOCKET_IO_PING_INTERVAL=25000