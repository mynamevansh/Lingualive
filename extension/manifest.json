{
  "manifest_version": 3,
  "name": "LinguaLive - Real-time Translation & Meeting Notes",
  "version": "1.0.0",
  "description": "Privacy-first real-time translation, subtitles, and AI-powered meeting summaries with built-in Chrome AI",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "offscreen",
    "aiOriginTrial"
  ],
  
  "host_permissions": [
    "https://meet.google.com/*",
    "https://zoom.us/*",
    "https://teams.microsoft.com/*",
    "http://localhost:3001/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "LinguaLive",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}